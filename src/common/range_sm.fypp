#:include 'forum.inc'

submodule (range_m) range_sm

   ! Uses

   use forum_m

   use agg_range_m
   use elem_range_m
   use lin_range_m
   use log_range_m
   use tab_range_m

   use ISO_FORTRAN_ENV

   ! No implicit typing

   implicit none

contains

   function range_t_type_(type) result(range)

      character(*), intent(in)    :: type
      class(range_t), allocatable :: range

      ! Construct range by subsetting range_in

      select case(type)
      case('agg_range_t')
         allocate(agg_range_t::range)
      case('elem_range_t')
         allocate(elem_range_t::range)
      case('lin_range_t')
         allocate(lin_range_t::range)
      case ('log_range_t')
         allocate(log_range_t::range)
      case('tab_range_t')
         allocate(tab_range_t::range)
      case default
         @:ABORT('invalid type')
      end select

      ! Finish

      return

   end function range_t_type_
         
end submodule range_sm
