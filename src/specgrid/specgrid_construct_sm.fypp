#:include 'forum.inc'

submodule (specgrid_m) specgrid_construct_sm

   ! No implicit typing

   implicit none (type, external)

   ! Procedures

contains

   module procedure specgrid_t_

      integer  :: n_vert_seq
      integer  :: n
      real(RD) :: lam_min
      real(RD) :: lam_max

      ! Construct specgrid from the supplied data

      ! Set up the vgrid and specsource

      specgrid%vgrid = vgrid
      specgrid%specsource = specsource

      ! Check for consistency

      call specgrid%vgrid%get_n_vert_seq(n_vert_seq)
      call specgrid%specsource%get_n(n)

      @:CHECK_BOUNDS(n, n_vert_seq)

      ! Set up the cache

      call specgrid%specsource%get_lam_min(lam_min)
      call specgrid%specsource%get_lam_max(lam_max)

      specgrid%speccache = speccache_t(n, lam_min, lam_max)

      specgrid%lam_min = lam_min
      specgrid%lam_max = lam_max

      ! Finish

      return

   end procedure specgrid_t_

end submodule specgrid_construct_sm
